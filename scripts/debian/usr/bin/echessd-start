#!/bin/sh

###-------------------------------------------------------------------
### File    : echessd-start
### Author  : Aleksey Morarash <aleksey.morarash@gmail.com>
### Created : 6 Jul 2012
### License : FreeBSD
### Description : starts echessd server
###
###-------------------------------------------------------------------

exec su --login --command \
    'erl -sname "echessd" \
    -mnesia dir \"/var/lib/echessd\" \
    -echessd_config /etc/echessd.conf \
    -echessd_privdir /usr/share/echessd \
    -noshell -noinput \
    -s mnesia \
    -s echessd' echessd

